# top-most EditorConfig file
root = true

# Universal settings for all files
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# JavaScript and JSON files
[*.{js,json}]
indent_size = 2

# CSS files
[*.css]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# PHP files
[*.php]
indent_style = space
indent_size = 4  # PHP community often prefers 4 spaces

# Markdown files, where trailing whitespace might be meaningful
[*.md]
trim_trailing_whitespace = false
